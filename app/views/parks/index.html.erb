<!DOCTYPE html>
<html>
<head>
  <title>Parks</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
</head>

<body>
  

  <h1>Parks</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Neighbourhood</th>
        <th>District</th>
        <th>CCA</th>
      </tr>
    </thead>
    <tbody>
      <% @parks.each do |park| %>
        <tr>
          <td><%= park.name %></td>
          <td><%= park.location.description %></td>
          <td><%= park.neighbourhood.name %></td>
          <td><%= park.district.name %></td>
          <td><%= park.cca %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  
</body>
</html>
