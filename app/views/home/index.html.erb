
  <div class="container">
    

<main class="flex justify-center items-center h-screen">
  <div class="bg-blue-800 p-8 rounded-lg shadow-lg w-3/4 md:w-1/2 lg:w-1/3">
    <h2 class="text-white text-2xl font-bold mb-4 text-center">Search for Parks, Trees, and School Zone Signages</h2>
    <%= form_with url: search_path, method: :get, local: true do %>
      <%= text_field_tag :q, params[:q], placeholder: "Search...", class: "w-full p-2 mb-4 rounded text-black" %>
      <%= select_tag :category, options_for_select([['All', ''], ['Parks', 'parks'], ['School Zones', 'school_zones'], ['Urban Trees', 'urban_trees']], params[:category]), prompt: 'Select Category', class: "w-full p-2 mb-4 rounded text-black" %>
      <%= submit_tag "Search", class: "w-full bg-blue-600 text-white py-2 rounded cursor-pointer hover:bg-blue-700" %>
    <% end %>
  </div>
</main>




   
  </div>
